        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Update step data for yesterday" />-->

    <Button
        android:id="@+id/btn_delete_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete step data for yesterday" />

    <Button
        android:id="@+id/btn_show_subscriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Subscriptions"/>
    <Button
        android:id="@+id/btn_cancel_subscriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Subscriptions"/>


    <org.eazegraph.lib.charts.PieChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="7dp"
        app:egLegendTextSize="18sp"
        app:egUsePieRotation="true"
        app:egValueTextSize="36sp"/>

